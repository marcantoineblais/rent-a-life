<div class="container py-5">
  <h2>My booking history</h2>

  <h3>Pending :</h3>
  <div class="cards">
    <% @bookings.select(&:pending?).each do |b| %>
      <div class="card p-3">
        <div class="class-body">
          <h2 class="card-title"><%= b.life.title %></h2>
          <p class="card-text"><%= b.start_date %> to <%= b.end_date %></p>
          <%= link_to "See details", booking_path(b), class: 'btn btn-primary' %>
        </div>
      </div>
  <% end %>
  </div>

  <h3>Accepted :</h3>
  <div class="cards">
    <% @bookings.select(&:accepted?).each do |b| %>
      <div class="card p-3">
        <div class="class-body">
          <h2 class="card-title"><%= b.life.title %></h2>
          <p class="card-text"><%= b.start_date %> to <%= b.end_date %></p>
          <%= link_to "See details", booking_path(b), class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>

  <h3>Refused :</h3>
    <div class="cards">
      <% @bookings.select(&:refused?).each do |b| %>
        <div class="card p-3">
          <div class="class-body">
            <h2 class="card-title"><%= b.life.title %></h2>
            <p class="card-text"><%= b.start_date %> to <%= b.end_date %></p>
            <%= link_to "See details", booking_path(b), class: 'btn btn-primary' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
