<div class="container py-5">
  <h1>Pending requests on my lives</h1>

  <h2>Pending :</h2>
  <div class="cards">
    <% @bookings.select(&:pending?).each do |b| %>
      <div class="card p-3">
        <div class="class-body">
          <h2 class="card-title"><%= b.life.title %></h2>
          <p class="card-text"><%= b.start_date %> to <%= b.end_date %></p>
          <%= link_to 'Review request', edit_booking_path(b), class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>

  <h2>Accepted :</h2>
  <div class="cards">
    <% @bookings.select(&:accepted?).each do |b| %>
      <div class="card p-3">
        <div class="class-body">
          <h2 class="card-title"><%= b.life.title %></h2>
          <p class="card-text"><%= b.start_date %> to <%= b.end_date %></p>
          <%= link_to "See details", booking_path(b), class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
