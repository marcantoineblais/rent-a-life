<div class="container py-5">
  <h2>Who do you want to be ?</h2>

  <div class="cards mt-3">
    <% @lives.each do |life| %>
      <div class="card p-3">
        <div class="card-body">
          <h3 class="card-title"><%= link_to life.title, life_path(life) %></h3>
          <p class="card-text"><%= life.description %></p>
          <p class="card-text"><%= life.price %>$</p>
        </div>
      </div>
    <% end %>
  </div>
</div>
