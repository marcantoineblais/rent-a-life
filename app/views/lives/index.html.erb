<div class="container">
  <h1>All Lives</h1>
  <div class="map" data-controller="mapbox" data-mapbox-markers-value="<%= @markers.to_json %>" data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
  <div class="cards mt-3">
    <% @lives.each do |life| %>
      <div class="card p-3">
        <div class="card-body">
          <h2 class="card-title"><%= link_to life.title, life_path(life) %></h2>
          <p class="card-text"><%= life.description %></p>
          <p class="card-text"><%= life.price %>$</p>
        </div>
      </div>
    <% end %>
  </div>
</div>
