<h1>All Lives</h1>

<div class="cards">
  <% @lives.each do |life| %>
    <div class="card p-3">
      <div class="card-body">
        <h2 class="card-title"><%= link_to life.title, life_path(life) %></h2>
        <p class="card-text"><%= life.description %></p>
      </div>
    </div>
  <% end %>

  <%= link_to 'Add a life', new_life_path %>
</div>
