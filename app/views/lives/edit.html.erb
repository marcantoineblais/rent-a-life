<div class="container">
  <h1> Edit this life</h1>
  <div class="row justify-content-center">
    <div class="col-6">
      <%= simple_form_for(@life) do |f| %>
        <%= f.input :title %>
        <%= f.input :description %>
        <%= f.input :price, as: :string %>
        <%= f.input :photo, as: :file %>
        <%= f.button :submit, value: 'Update life', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
