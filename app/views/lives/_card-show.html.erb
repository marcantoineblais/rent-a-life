<div class="card booking-card w-100">
  <div class="card-body">
    <div class="row">
      <div class="col-md-4">
        <div class="date-wrapper">
          <div class="date-block">
              <span class="date-block-day"><%= @booking.start_date.strftime("%d") %></span>
              <span class="date-block-month"><%= @booking.start_date.strftime("%B") %></span>
          </div>
          <div class="widget-49-meeting-info">
              <span class="widget-49-pro-title"> To </span>
          </div>
          <div class="date-block">
              <span class="date-block-day"><%= @booking.end_date.strftime("%d") %></span>
              <span class="date-block-month"><%= @booking.end_date.strftime("%B") %></span>
          </div>
        </div>
        <div class="date-days mt-4">
          <p>Your booking is for <%= pluralize @booking.date_range.count, "day" %></p>
        </div>
      </div>
      <div class="col-md-4">
        <div class="booking-card-block">
          <div class="booking-card-name">
            <h2 class="card-title"><%= @booking.life.title %></h2>
          </div>
          <div class="booking-card-price">
            <p><%= @booking.life.price %> $</p>
          </div>
        </div>
      </div>
      <div class="col-md-4">
      <div class="booking-card-block">
          <div class="booking-card-status">
            <h3>Status: <span class="color-yellow"><%= @booking.status %></span></h3>
          </div>
          <div class="booking-card-btn">
            <% if @booking.pending? %>
              <%= link_to 'Change dates', edit_booking_path(@booking), class: 'btn btn-primary' %>
            <% end %>

            <% if @booking.life.user == current_user %>
              <%= link_to 'Cancel booking', booking_path(@booking), method: 'delete', data: { confirm: "Are you sure you want to cancel this booking?" }, class: 'btn btn-danger' %>
            <% end %>
          </div>
      </div>
      </div>
    </div>

  </div>
</div>
